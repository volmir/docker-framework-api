{
    "name": "volmir/no-framework-api",
    "description": "No framework API",
    "homepage": "https://github.com/volmir/no-framework-api",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpunit/dbunit": "^1.3",
        "ext-fileinfo": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"        
    },
    "require": {
        "psr/log": "^3.0"
    },
    "scripts": {
        "test": "phpunit"
    }
}
